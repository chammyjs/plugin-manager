{
  "name": "@chammy/plugin-manager",
  "version": "0.1.0",
  "description": "Simple plugin manager for Chammy.js",
  "module": "dist/plugin-manager.es2015.js",
  "main": "dist/plugin-manager.js",
  "scripts": {
    "build-docs": "esdoc",
    "build": "rlb",
    "lint": "eslint src/**/*.js test/*.js",
    "pretest": "npm run lint",
    "test": "nyc mocha --reporter=nyan --require babel-register",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "version": "npm test && npm run build && npm run build-docs && git add -f dist/ && git add -f docs/",
    "postversion": "git rm -r --cached dist/ && git commit -m \"chore(dist): clean after release [ci skip]\" && git push origin && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chammyjs/plugin-manager.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "plugin",
    "chammy",
    "plugin-manager"
  ],
  "author": "Chammy.js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chammyjs/plugin-manager/issues"
  },
  "homepage": "https://github.com/chammyjs/plugin-manager#readme",
  "devDependencies": {
    "@comandeer/rollup-lib-bundler": "^0.6.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.0",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.12.1",
    "mocha": "^5.0.0",
    "nyc": "^11.3.0"
  },
  "dependencies": {
    "@chammy/plugin-helper": "^0.1.0",
    "glob": "^7.1.2"
  }
}
